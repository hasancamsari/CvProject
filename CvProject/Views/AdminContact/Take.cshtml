@model CvProject.Models.Entity.TBLCONTACT

@{
    ViewBag.Title = "Take";
    Layout = "~/Views/AdminDefault/_AdminMain.cshtml";
}

<h2>İletişim Güncelle</h2>

@using (Html.BeginForm("UpdateContact", "AdminContact", FormMethod.Post))
{
    @Html.HiddenFor(m => m.SMID)
    <div class="container">
        <form asp-action="UpdateContact" method="post">
            <input type="hidden" name="SMID" value="@Model.SMID" />
            <div class="mb-3">
                <label for="PHONE" class="form-label">Telefon</label>
                <input type="text" class="form-control" id="PHONE" name="PHONE" value="@Model.PHONE" required />
            </div>
            <div class="mb-3">
                <label for="SMLGIT" class="form-label">GitHub Kullanıcı Adı</label>
                <input type="text" class="form-control" id="SMLGIT" name="SMLGIT" value="@Model.SMLGIT" required />
            </div>
            <div class="mb-3">
                <label for="LINKGIT" class="form-label">GitHub Linki</label>
                <input type="url" class="form-control" id="LINKGIT" name="LINKGIT" value="@Model.LINKGIT" required />
            </div>
            <div class="mb-3">
                <label for="SMLLINKED" class="form-label">LinkedIn Kullanıcı Adı</label>
                <input type="text" class="form-control" id="SMLLINKED" name="SMLLINKED" value="@Model.SMLLINKED" required />
            </div>
            <div class="mb-3">
                <label for="LINKIN" class="form-label">LinkedIn Linki</label>
                <input type="url" class="form-control" id="LINKIN" name="LINKIN" value="@Model.LINKIN" required />
            </div>
            <div class="mb-3">
                <label for="LMAIL" class="form-label">E-posta</label>
                <input type="email" class="form-control" id="LMAIL" name="LMAIL" value="@Model.LMAIL" required />
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
        </div>
}
