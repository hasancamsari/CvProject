@using CvProject.Models.Entity;
@model List<TBLCONTACT>

<div class="grid__item">
    @foreach (var cnt in Model)
    {
        <div class="product">
            <div class="tm-nav-link">
                <i class="fas fa-comments fa-3x tm-nav-icon"></i>
                <span class="tm-nav-text">@cnt.TBLITEM.ITEM</span>
                <div class="product__bg"></div>
            </div>
            <div class="product__description">
                <div class="pt-sm-4 pb-sm-4 pl-sm-5 pr-sm-5 pt-2 pb-2 pl-3 pr-3">
                    <div class="row mb-3" style="margin-top:-40px; margin-bottom:40px">
                        <div class="col-12">
                            <h2 class="tm-page-title">Benimle İletişime Geç</h2>
                            <hr style="width:100%; height:1px; background-color:#ccc; border:none;"/>
                        </div>
                    </div>
                    <div class="row mb-4">
                    </div>
                    <div class="row" style="margin-bottom:-40px">
                        <div class="col-12 d-flex justify-content-center align-items-center">
                            <img src="~/Models/CvProject/img/gitl.png" alt="Gitl" style="width: 50px; height: 50px; margin-right: 5px; margin-left:10px;" />
                            <span><a href="https://www. @cnt.LINKGIT"></a>github.com/@cnt.SMLGIT</span>
                            <img src="~/Models/CvProject/img/in.png" alt="Link" style="width: 50px; height: 50px; margin-left: 10px; margin-right: 5px;" />
                            <span><a href="@cnt.LINKIN"></a>LinkedIn/@cnt.SMLLINKED</span>
                        </div>
                        <div class="col-12 d-flex justify-content-center align-items-center">
                            <img src="~/Models/CvProject/img/phone.png" alt="Phone" style="width: 50px; height: 50px; margin-right: 5px; margin-left: 10px;" />
                            <span>+90 @cnt.PHONE</span>
                            <img src="~/Models/CvProject/img/mail.png" alt="Mail" style="width: 50px; height: 50px; margin-right: 5px; margin-left: 10px;" />
                            <span>@cnt.LMAIL</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
